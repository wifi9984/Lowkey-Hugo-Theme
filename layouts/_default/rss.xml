{{- /* Set Variables */ -}}
{{- $baseurl := .Site.BaseURL -}}
{{- $items := .Site.RegularPages -}}
{{- $pubDate := time.Now.Format "Mon, 02 Jan 2006 15:04:05 MST" -}}

{{- /* RSS Feed Template */ -}}
<rss version="2.0">
  <channel>
    <title>{{ .Site.Title }}</title>
    <link>{{ $baseurl }}</link>
    <description>{{ or .Site.Params.rssDescription .Site.Title }}</description>
    <language>{{ .Site.Language.Lang }}</language>
    <pubDate>{{ $pubDate }}</pubDate>
    {{ range $items }}
      <item>
        <title>{{ .Title }}</title>
        <link>{{ $baseurl }}{{ .RelPermalink }}</link>
        <description>{{ .Content | html }}</description>
        <pubDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 MST" }}</pubDate>
        <guid isPermaLink="true">{{ .Permalink }}</guid>
      </item>
    {{ end }}
  </channel>
</rss>
